version: '3'

services:
  imageocr:
    image: compare_images:imageocr
    environment:
      - LOGGER_LEVEL=INFO
      - MONGODB_HOST=mongodb
      - MONGODB_PORT=27017
      - MONGODB_COLLECTION=ocr_recognized
      - MONGODB_SIMILAR_IMAGES_COLLECTION=similar_images
      - MONGODB_USERNAME=ocr_user
      - MONGODB_PASSWORD=
      - MONGODB_DATABASE=ocr_text
      - RABBITMQ_HOST=rabbitmq
      - RABBITMQ_PORT=5672
      - RABBITMQ_USERNAME=ocr_user
      - RABBITMQ_PASSWORD=
      - RABBITMQ_VHOST=/
      - RABBITMQ_HEARTBEAT=600
      - RABBITMQ_BLOCKED_CONNECTION_TIMEOUT=300
      - DET_MODEL=FCE_CTW_DCNv2
      - REC_MODEL=MASTER
      - SIMILARITY_PERCENTAGE=60
      - MIN_TEXT_LEN=200
      - ENABLE_MAINTENANCE_QUEUE=True
      - ENABLE_PREPROCESS_TEXT=False
      - AHASH_MAX_SIMILARITY_PERCENT=4
      - DHASH_MAX_SIMILARITY_PERCENT=8
      - WHASH_HAAR_MAX_SIMILARITY_PERCENT=8
      - COLORHASH_MAX_SIMILARITY_PERCENT=0

    build:
        context: ./
        dockerfile: ./Dockerfile
    container_name: imageocr
    volumes:
    - <path_to_images>:<path_to_images>:ro
    restart: always
  rabbitmq:
    image: rabbitmq:management
    container_name: rabbitmq
    environment:
      - RABBITMQ_DEFAULT_USER=ocr_user
      - RABBITMQ_DEFAULT_PASS=
    restart: always
    ports:
      - "5672:5672"
      - "15672:15672"
  mongodb:
    image: mongo:4.4
    environment:
      - MONGO_INITDB_ROOT_USERNAME=ocr_user
      - MONGO_INITDB_ROOT_PASSWORD=
    restart: always
    ports:
      - 27017:27017
